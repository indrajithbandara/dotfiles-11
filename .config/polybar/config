[module/lock]
type = custom/ipc
format = 
hook-0 = dm-tool lock
click-left = polybar-msg -p %pid% hook lock 1

[module/avg-battery]
type = custom/script
exec = "count=$(acpi -b | wc -l); sum=$(acpi -b | grep -P -o '[0-9]+(?=%)' | tr -d '%' | xargs -I% echo -n '+%'); echo  $(( sum / count ))%"
format-underline = #ffa500
interval = 5

[module/wattage]
type = custom/script
exec = $HOME/.scripts/wattage.sh
format-underline = #08af13
interval = 5

